<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pageBackground"
        android:orientation="vertical"
        android:paddingTop="@dimen/itemDividerHeight">

        <com.jiyouliang.mywechat.view.AccountInfoView
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <com.jiyouliang.mywechat.view.SettingItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/itemDividerHeight"
            app:sivBackground="@drawable/icon_wallet"
            app:sivDividerEnable="false"
            app:sivTitle="钱包" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/itemDividerHeight"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <com.jiyouliang.mywechat.view.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sivBackground="@drawable/icon_star"
                app:sivTitle="收藏" />


            <com.jiyouliang.mywechat.view.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sivBackground="@drawable/icon_album"
                app:sivTitle="相册" />

            <com.jiyouliang.mywechat.view.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sivBackground="@drawable/icon_card"
                app:sivTitle="卡包" />

            <com.jiyouliang.mywechat.view.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sivBackground="@drawable/emoji"
                app:sivDividerEnable="false"
                app:sivTitle="表情" />


        </LinearLayout>

        <com.jiyouliang.mywechat.view.SettingItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/itemDividerHeight"
            app:sivBackground="@drawable/icon_setting"
            app:sivDividerEnable="false"
            app:sivTitle="设置" />

    </LinearLayout>


</ScrollView>
