<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CommonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextNormal" parent="@style/CommonText">
        <item name="android:textColor">@color/textNormal</item>
    </style>

    <style name="TextSelected" parent="@style/CommonText">
        <item name="android:textColor">@color/textSelected</item>
    </style>

    <style name="BtmNavIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@drawable/common_line</item>
    </style>

    <style name="textTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textNormal</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
